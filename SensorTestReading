import time
import board
import adafruit_as5600
# Initialize I2C communication and the AS5600 magnetic sensor
i2c = board.I2C()
sensor = adafruit_as5600.AS5600(i2c)
try: 
  while True:
    # "Raw Angle" is a 12-bit value (0-4095).
    print(f"Raw Angle: {sensor.raw_angle}")
    print(f"Degrees: {sensor.angle:.2f}")
    # Short delay to stabilize readings and prevent the script from crashing
    time.sleep(0.1)
except KeyboardInterrupt: 
  print("\nStopped by user")
